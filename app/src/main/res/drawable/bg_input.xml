<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fundo levemente escuro para contraste com fundo dark -->
    <solid android:color="#3A3F47" />

    <!-- Cantos arredondados suaves -->
    <corners android:radius="12dp" />

    <!-- Borda leve mais escura para profundidade -->
    <stroke
        android:width="1dp"
        android:color="#555A63" />

    <!-- Padding interno para espaÃ§amento -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />
</shape>
